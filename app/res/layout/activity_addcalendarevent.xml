<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="220dp"
        android:onClick="onClickSave"
        android:text="Save" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_save"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/button_save"
        android:onClick="onClickCancel"
        android:text="Cancel" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date from:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_date"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_date_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_datepicker"
        android:layout_marginTop="41dp"
        android:text="Date to:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_datepicker_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_date_to"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_changedate_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_datepicker"
        android:layout_alignBottom="@+id/textView_datepicker"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView_datepicker"
        android:onClick="onClickChangeDateFrom"
        android:text="Change Date" />

    <Button
        android:id="@+id/button_changedate_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_datepicker_to"
        android:layout_alignBottom="@+id/textView_datepicker_to"
        android:layout_alignLeft="@+id/button_changedate_from"
        android:onClick="onClickChangeDateTo"
        android:text="Change Date" />

    <TextView
        android:id="@+id/textView_time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_cancel"
        android:layout_alignParentTop="true"
        android:text="Time from:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_timepicker_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_time_from"
        android:layout_below="@+id/textView_time_from"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_chnagetime_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_timepicker_from"
        android:layout_alignBottom="@+id/textView_timepicker_from"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/textView_timepicker_from"
        android:onClick="onClickChangeTimeFrom"
        android:text="Change Time" />

    <TextView
        android:id="@+id/textView_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_datepicker_to"
        android:layout_alignLeft="@+id/textView_timepicker_from"
        android:text="Time to:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_timepicker_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_time_to"
        android:layout_below="@+id/textView_time_to"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_changetime_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_timepicker_to"
        android:layout_alignBottom="@+id/textView_timepicker_to"
        android:layout_alignLeft="@+id/button_chnagetime_to"
        android:onClick="onClickChangeTimeTo"
        android:text="Change Time" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_changedate_to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Description:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_description"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textMultiLine" >
        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/checkBox_exchange_addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_save"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="41dp"
        android:text="Exchnage" />

    <CheckBox
        android:id="@+id/checkBox_google_addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox_exchange_addcontact"
        android:layout_alignLeft="@+id/checkBox_exchange_addcontact"
        android:text="Google" />

    <CheckBox
        android:id="@+id/checkBox_synchronator_addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox_google_addcontact"
        android:layout_alignLeft="@+id/checkBox_google_addcontact"
        android:text="Synchronator" />

    <TextView
        android:id="@+id/textView_savelocation_addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox_synchronator_addcontact"
        android:layout_alignLeft="@+id/checkBox_synchronator_addcontact"
        android:text="Save Location:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    
    <RadioGroup
        android:id="@+id/radiogroup_every"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_above="@+id/textView_savelocation_addcontact"
	    android:layout_alignLeft="@+id/textView_savelocation_addcontact" 
	    android:layout_marginBottom="20dp">
		<RadioButton
	        android:id="@+id/radioButton_everyday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Every Day" />
	   	
	    <RadioButton
	        android:id="@+id/radioButton_everymonth"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Every Month" />
	
	    <RadioButton
	        android:id="@+id/radioButton_everyyear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Every Year" />
	</RadioGroup>
    <TextView
        android:id="@+id/textView_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radiogroup_every"
        android:layout_alignLeft="@+id/textView_savelocation_addcontact"
        android:text="Repeat Every:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>