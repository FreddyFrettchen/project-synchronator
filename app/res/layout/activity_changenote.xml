<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_note_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title" />

    <EditText
        android:id="@+id/text_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_note_view_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text" />

    <EditText
        android:id="@+id/text_note_note"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:ems="10"
        android:gravity="top|center_vertical"
        android:inputType="textMultiLine" />
    
    <TextView
        android:id="@+id/text_save_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_to" />

    <ListView
        android:id="@+id/list_accounts"
        android:layout_width="match_parent"
        android:layout_height="330dp">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_note_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="@string/save" />
        
        <Button
            android:id="@+id/button_note_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="@string/cancel" />

    </LinearLayout>

</LinearLayout>