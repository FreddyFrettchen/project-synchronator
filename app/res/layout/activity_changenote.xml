<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/save_changenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="88dp"
        android:onClick="onClickSave"
        android:text="Save" />

    <Button
        android:id="@+id/cancel_changenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save_changenote"
        android:layout_alignBottom="@+id/save_changenote"
        android:onClick="onClickCancel"
        android:layout_alignParentRight="true"
        
        android:text="Cancel" />

    <EditText
        android:id="@+id/edittext_changenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/save_changenote"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textview_notetitle_changenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save_changenote"
        android:layout_alignBottom="@+id/save_changenote"
        android:layout_alignParentLeft="true"
        android:text="Notiz Titel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>